@model PCGD.Models.DangNhapModel

@{
    ViewBag.Title = "Đăng Nhập Hệ Thống";
}
<div style="max-width: 350px;margin: auto;position: absolute;top: 50%;transform: translateY(-50%);left: 0;right: 0">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                if (ViewData.ModelState["ThongBaoLoi"] != null && !String.IsNullOrEmpty(ViewData.ModelState["ThongBaoLoi"].Errors[0].ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <span class="d-block text-danger">@ViewData.ModelState["ThongBaoLoi"].Errors[0].ErrorMessage</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <div class="form-group">
                        @Html.LabelFor(model => model.TaiKhoan)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fal fa-user"></i></span>
                        </div>
                        @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control shadow-none", @autocomplete = "off", @placeholder = "Nhập tài khoản" } })
                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "invalid-feedback" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhau)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fal fa-lock"></i></span>
                        </div>
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control shadow-none", @autocomplete = "off", @placeholder = "Nhập mật khẩu" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "invalid-feedback" })
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="custom-control custom-checkbox mt-2">
                            <input type="checkbox" class="custom-control-input" id="remember">
                            <label class="custom-control-label" for="remember">Ghi nhớ</label>
                        </div>
                    </div>
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" id="submit"><i class="fal fa-sign-in"></i> Đăng Nhập</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>