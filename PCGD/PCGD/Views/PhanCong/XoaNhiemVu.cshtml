@model PCGD.Models.XoaNhiemVuModel

@{
    ViewBag.Title = "Xoá Nhiệm Vụ";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Phân Công</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details", new { id = Model.PhanCong_ID })">Học Kì @PCGD.Libs.HocPhanLib.ConvertHocKi(ViewBag.HocKi) Năm Học @ViewBag.NamHoc - @(ViewBag.NamHoc + 1)</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>
<div class="card">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            Bạn có muốn xoá nhiệm vụ của giảng viên <strong>@Html.DisplayFor(model => model.TenGV)</strong> này không?
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="text-left">
                <input type="submit" value="Xoá ngay" class="btn btn-primary" /> hoặc trở lại <a class="text-decoration-none" href="@Url.Action("Details", new { id = Model.PhanCong_ID })">trang chính</a>
            </div>
        }

    </div>
</div>
