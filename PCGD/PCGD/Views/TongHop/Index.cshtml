@model IEnumerable<PCGD.Models.TongHop>

@{
    ViewBag.Title = "Danh Sách Tổng Hợp";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tổng Hợp</li>
    </ol>
</nav>
<div class="card">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col">
                <form method="get">
                    <div class="input-group" style="max-width: 223px">
                        <input type="text" name="text" class="form-control" placeholder="Tìm kiếm..." autocomplete="off" value="@ViewBag.searchString">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit"><i class="fal fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <table class="table table-bordered table-sm table-hover mb-0">
            <tr>
                <th class="text-center" style="width: 40px">
                    TT
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.NamHoc)
                </th>
                <th class="text-center" style="width: 200px">Danh sách giảng viên</th>
            </tr>
            @if (Model.Count() <= 0)
            {
                <tr>
                    <td colspan="3" class="text-center bg-light">Danh sách tổng hợp rỗng.</td>
                </tr>
            }
            @{
                int stt = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @stt
                    </td>
                    <td class="text-center">
                        @item.NamHoc - @(item.NamHoc + 1)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Details", new { id = item.ID })">Xem chi tiết</a>
                    </td>
                </tr>
                stt++;
            }
        </table>
        @Html.Raw(PCGD.Libs.PaginationLib.Get(ViewBag.searchString, ViewBag.Total, ViewBag.Page))
    </div>
</div>